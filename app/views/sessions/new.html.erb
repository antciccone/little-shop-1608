<div class="container">
  <div class="mainbox col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Login</div>
      </div>
      <div class="panel-body new-user">
        <%= form_tag :login do  %>
          <div class="form-group">
            <%= label_tag :email, "Email", class: "control-label col-md-4 required-field" %>
            <%= text_field_tag :email, "", class: "input-md textinput textInput form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :password, "Password", class: "control-label col-md-4 required-field" %>
            <%= password_field_tag :password, "", class: "input-md textinput textInput form-control" %>
          </div>
          <div class="form-group">
            <%= submit_tag "Log In!", class: "btn btn-warning"%>
          </div>
        <% end %>
        <hr>
      </div>
      <div class="container">
        <a class="btn btn-default btn-github" href="https://github.com/login/oauth/authorize?client_id=65a45e10bd1029b7280e">
          <span><%= image_tag "/assets/GitHub-Mark-Light-32px.png", size: "20" %></span> <span>Login with Github</span>
        </a>
      </div>
    </div>
  </div>
</div>
