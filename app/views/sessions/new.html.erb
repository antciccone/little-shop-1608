<div class="container">
  <div class="mainbox col-md-6 center-form">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Sign Up</div>
      </div>
      <div class="panel-body new-user">
        <%= form_tag :login do  %>
          <div class="form-group">
            <%= label_tag :email, "Email", class: "control-label col-md-4 required-field" %>
            <%= text_field_tag :email, "", class: "input-md textinput textInput form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :password, "Password", class: "control-label col-md-4 required-field" %>
            <%= password_field_tag :password, "", class: "input-md textinput textInput form-control" %>
          </div>
          <div class="form-group">
            <%= submit_tag "Log In!", class: "btn btn-warning"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
