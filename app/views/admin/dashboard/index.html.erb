<h2 class="text-center">Admin Dashboard</h2>

<table class="table">
    <tr>
        <th>User<th>Order Date<th>Trip Name</th><th>Quantity</th><th>Subtotal<th> <div class="dropdown open">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Status
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li><%= link_to "All Orders", admin_dashboard_path, class: "dropdown-item" %></li>
            <li><%= link_to "Ordered", "#{admin_dashboard_path}/?status=ordered", class: "dropdown-item" %></li>
            <li><%= link_to "Paid", "#{admin_dashboard_path}/?status=paid", class: "dropdown-item" %></li>
            <li><%= link_to "Cancelled", "#{admin_dashboard_path}/?status=cancelled", class: "dropdown-item" %></li>
            <li><%= link_to "Completed", "#{admin_dashboard_path}/?status=completed", class: "dropdown-item" %></li>
          </div>
        </div></th><th></th><th></th><th></th>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.user.name %></td>
          <td><%= order.created_at.strftime("%m-%d-%Y") %> </td>
          <td><%= link_to order.trips.trip_titles, admin_order_path(order)  %></td>
          <td><%= order.orders_trips.trip_quantity  %></td>
          <td><%= order.cost %></td>
          <td><%= order.status %></td>
          <% if order.status == "ordered" %>
            <td><%= button_to "Mark Paid", change_status_path(order, status: "paid"), class: "btn btn-warning" %>
          <% else %>
            <td><%= button_to "Mark Paid", change_status_path(order, status: "paid"), class: "btn btn-warning", disabled:true %>
          <% end %>
          <% if order.status == "paid" %>
          <td><%= button_to "Mark Completed", change_status_path(order, status: "completed"), class: "btn btn-success" %>
            <% else %>
            <td><%= button_to "Mark Completed", change_status_path(order, status: "completed"), class: "btn btn-success",  disabled:true%>
              <% end %>
          </td>
          <% if order.status == "paid" || order.status == "ordered" %>
          <td><%= button_to "Cancel", change_status_path(order, status: "cancelled"), class: "btn btn-danger" %> </td>
          <% else %>
          <td><%= button_to "Cancel", change_status_path(order), class: "btn btn-danger", disabled:true %> </td>
          <% end %>
    </tr>
    <% end %>
  </table>
