<!DOCTYPE html>
<html>
  <head>
    <title>LittleShop1608</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="site-top">
      <nav id="site-header" class="navbar navbar-default">
        <div class="container-fluid">

          <a id="site-title" class="navbar-brand">Ribbit</a>

          <div class="navbar-form navbar-center input-group">
            <%= form_tag trips_path, method: "get", class: "navbar-form" do %>
              <%= text_field_tag :seach, "Find your next lilypad", class: "form-control", id: "destination-search" %>
              <%= submit_tag "Go", id: "destination-submit", class: "btn btn-default" %>
            <% end %>
          </div>


          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Login | Register", 'login_path', class: "site-login" %></li>
            <li><%= button_to "View Cart (#{@cart.total})", cart_path, method: "get", class: "btn btn-info cart" %></li>
          </ul>

        </div>
      </nav>
    </div>

    <div class="container">

      <% flash.each do |type, message| %>
        <%= content_tag :div, message %>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>
